<script>
  $('.brands_slider').owlCarousel({
      items: 5,
      itemsDesktop : [1199,4], 
      itemsDesktopSmall : [991,3], 
      itemsTablet: [480,2], 
      itemsMobile : [320,2],
      singleItem: false,
      navigation: true,
      pagination: false,
      autoPlay: true         
  });
  
  $('.blog_list').owlCarousel({
      items: 3,
      itemsDesktop : [1199,2], 
      itemsDesktopSmall : [991,2], 
      itemsTablet: [480,1], 
      singleItem: false,
      navigation: true,
      pagination: false,
      autoPlay: true,   
      margin: 15            
  });

  $('.products_list').owlCarousel({
    items: 5,
    itemsDesktop : [1199,4], 
    itemsDesktopSmall : [991,3], 
    itemsTablet: [480,1],
    singleItem: false,
    navigation: true,
    pagination: false,
    autoPlay: true,    
    margin: 45     
  });
  const customArrows = document.querySelectorAll(".custom_slider_arrows .arrow");
  customArrows.forEach( function (item) {
    item.addEventListener("click", e => {
      console.log("clicked")
      const target = e.target;
      const parent = target.closest("section");
      if(target.classList.contains("prev")){
        $(parent.querySelector(".owl-carousel")).trigger('owl.prev');
      }else if(target.classList.contains("next")){
        $(parent.querySelector(".owl-carousel")).trigger('owl.next');
      }
    })
  })
</script>

