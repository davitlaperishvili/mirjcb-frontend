{{ header }}

<div class="dl_theme white">
  <div class="breadcrumbs_wrap">
    <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
  <section class="product_main_info">
    <div class="container">
      <div class="product_main_info_wrap">
        <h1 class="product_title">{{ heading_title }}</h1>
        <div class="left product-image thumbnails">
          <div class="product_slider swiper">
            <div class="swiper-wrapper">
              {% for  image in images %}
                <div class="swiper-slide">
                  <div class="product-block">
                      <a
                          href="{{ image.thumb }}"
                          title="{{ heading_title }}"
                          class="elevatezoom-gallery"
                          data-image="{{ image.popup }}"
                          data-zoom-image="{{ image.thumb }}"
                      >
                          <img
                              src="{{ image.thumb }}"
                              
                              title="{{ heading_title }}"
                              alt="{{ heading_title }}"
                          />
                      </a>
                  </div>
                </div>
              {% endfor %}
            </div>
            <div class="swiper-pagination"></div>
          </div>
          <div class="image">
            <a class="thumbnail" href="{{ popup }}">
              <img
                  id="tmzoom"
                  src="{{ thumb }}"
                  data-zoom-image="{{ popup }}"
                  title="{{ heading_title }}"
                  alt="{{ heading_title }}"
              />
            </a>
            <div class="zoom">
              <i class="ri-search-line"></i>
            </div>
          </div>
        </div>
        <div class="product_content" id="product">
          <div class="info">
            <div class="info_title">{{ text_o_tovare }}</div>
            <div class="info_list">
              <ul>
                {% if manufacturer %}
                  <li>{{ text_manufacturer }} <span><a href="{{ manufacturers }}">{{ manufacturer }}</a></span></li>
                {% endif %}
                <li>{{ text_model }} <span>{{ model }}</span></li>
                <li>{{ text_sku }} <span>{{ sku }}</span></li>
                {% if reward %}
                  <li>{{ text_reward }} <span>{{ reward }}</span></li>
                {% endif %}
                <li>{{ text_stock }} <span>{{ stock }}</span></li>
              </ul>
            </div>
            <div class="middle_link">
              <a href="./#product_desc" data-tab="tab1">{{ text_go_discription }}</a>
            </div>
            <div class="info_title">{{ text_delivery }}</div>
            <div class="info_list special">
              <ul>
                <li>Краснодар: <span>1 день</span></li>
                <li>Сочи: <span>3 дня</span></li>
                <li>Ростов-на-Дону: <span>5 дней</span></li>
              </ul>
            </div>
          </div>
          <div class="mini_cart">
            {% if price %}
              <div class="price">
                {% if not special %}
                  <div class="current_price">{{ price }}</div>
                {% else %}
                  <div class="current_price">{{ special }}</div>
                  <del class="old_price">{{ price }}</del>
                {% endif %}
              </div>
            {% endif %}
            <div class="count">
              <input type="hidden" name="product_id" value="{{ product_id }}" />
              <span onclick="this.nextElementSibling.stepDown()">-</span>
              <input type="number" min="{{ minimum }}" name="quantity" id="input-quantity" value="1">
              <span onclick="this.previousElementSibling.stepUp()">+</span>
            </div>
            <div class="buttons">
              <div class="theme_button fill">
                <button type="button" id="button-cart" data-loading-text="{{ text_loading }}" class="btn btn-primary btn-lg btn-block">{{ button_cart }}</button>
              </div>
              <div class="theme_button">
                <button type="button" id="button-cart" data-loading-text="{{ text_loading }}" class="btn btn-primary btn-lg btn-block">{{ buy_in_1_click }}</button>
              </div>
            </div>
            <div class="additional_info">{{ text_additional_delivery }}</div>
          </div>
