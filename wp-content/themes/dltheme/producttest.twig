  <section class="product_additional_info">
    <div class="container">
      <div class="block_wrap">
        <figure>
          <img src="catalog/view/theme/Stanley/image/logo-image.jpg" alt="">
        </figure>
        <div class="block_info">
          <div class="info_list">
            <ul>
              <li>
                <img src="catalog/view/theme/Stanley/image/star.png" alt="">
                <span>4,6{{ text_rating }}</span>
              </li>
              <li>
                <img src="catalog/view/theme/Stanley/image/wallet.png" alt="">
                <span>{{ text_safe_payment }}</span>
              </li>
              <li>
                <img src="catalog/view/theme/Stanley/image/package.png" alt="">
                <span>{{ text_fast_delivery }}</span>
              </li>
              <li>
                <img src="catalog/view/theme/Stanley/image/refund.png" alt="">
                <span>{{ text_return }}</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="custom_products">
    <div class="container">
      <div class="section_content">
        <div class="section_title">
          <h2>{{ text_additional_products }}</h2>
          {% set sliderFor = 5 %}
				  {% set productCount = products|length %} 
          {% if productCount > sliderFor %}
            <div class="custom_slider_arrows">
              <div class="prev arrow fa fa-light fa-chevron-left"></div>
              <div class="next arrow fa fa-light fa-chevron-right"></div>
            </div>
          {% endif %}
        </div>
        <div class="products_list owl-carousel">
          {% for product in products %}
            <div class="owl-slide">
              <figure>
                <img src="{{ product.thumb }}" alt="{{ product.name }}">
              </figure>
              <div class="product_content">
                <h3 class="title"><a href="{{ product.href }}">{{ product.name }}</a></h3>
                <div class="slug">{{ text_sku }} {{ product.sku }}</div>
                {% if product.price %}
                  <div class="price">
                    {% if not product.special %}
                      <div class="new">{{ product.price }}</div>
                    {% else %}
                      <div class="new">{{ product.special }}</div>
                      <div class="old">{{ product.price }}</div>
                    {% endif %}
                  </div>
                {% endif %}
                <div style="cursor: pointer" class="buy_btn"><a onclick="cart.add('{{ product.product_id }} ');">{{ button_cart }}</a></div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
  <section class="product_description" id="product_desc">
    <div class="container">
      <div class="section_tabs">
        <div class="tabs">
          <div class="tab is-active" data-tab="tab1">{{ text_part_discription }}</div>
          <div class="tab" data-tab="tab2">{{ text_part_review }} <sup>{{ count_reviews }}</sup></div>
        </div>
        <div class="tabs_content">
          <div class="tab_content is-active" data-content="tab1content">
            <div class="desc">{{ description }}</div>
          </div>
          <div class="tab_content" data-content="tab2content">
            {% if review_status %}
